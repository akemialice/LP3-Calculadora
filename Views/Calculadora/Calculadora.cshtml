@{
    ViewData["Title"] = "Calculadora";
}

<h1 class="display-4">Calculadora</h1>
<form action="Resultado">

    <p>
        <label for="num1">Número 1:</label>
        <input type="text" name="num1" id="num1" >
    </p>

    <p>
        <label for="num2">Número 2</label>
        <input type="text" name="num2" id="num2" >
    </p>

    <p>
        <select name="operation" id="operation">
            <option value=1>Operação - Subtração</option>
            <option value=2>Operação - Soma</option>
            <option value=3>Operação - Multiplicação</option>
            <option value=4>Operação - Divisão</option>
        </select>
    </p>

    <p>
        <input type="submit" value="Calcular">
    </p>
</form>